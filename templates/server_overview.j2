{% extends "base.j2" %}

{% block title %}Dashboard{% endblock %}


{% block content %}
<div class="container-inner">
    <div id="flashed-messages" class="small-center"></div>
    {% include "noscript.j2 "%}
    <div class="medium-center">
        <div class="panel mb64 pb0 m0 flex-grow flex flex-column">
            <h2>Server Overview</h2>
            <div class="panel-inset-lighter mb12">
                <h3>Downloaded</h3>
                {% for server in downloaded_servers %}
                    <a href="{{url_for('dashboard.install_server', name=server.name)}}">{{ server.name }}</a>
                {% endfor %}
            </div>
            <div class="panel-inset-lighter mb12">
                <h3>Installed</h3>
                {% for server in installed_servers %}
                    <a href="{{url_for('dashboard.manage_server', name=server.name)}}">{{ server.name }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

{% endblock %}
